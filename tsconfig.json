{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "target": "ES2022",
    "baseUrl": ".",
    "module": "NodeNext",
    "types": ["node"],
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "paths": {
      "~/*": [ "src/*"]
    }
  },
  "include": [
    "src",
    "tests",
    "examples"
  ],
  "exclude": [
    "bin",
    "node_modules"
  ]
}
